    <!-- START COMPANY PARTNER LOGO  -->
    <div id="client" class="partner-logo">
        <div class="partner_overlay">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <div class="partner">
                          @foreach (Partners item in ViewBag.partner)
                            {
                                <a href="#"> <img src="../../Upload/@item.photo" alt="image"></a>
                            }
