    <!-- START CONTACT FORM-->
    <section id="contact" class="contact_area section-padding">
        <div class="container">
            <div class="row">
                <div class="section-title text-center">
                    <h2>Get in touch</h2>
                    <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco.</p>
                </div>
                <div class="col-md-6 col-sm-12 col-xs-12 wow bounceInLeft" data-wow-delay=".3s">
                    <div class="contact">
                       @using (Html.BeginForm(null, null, FormMethod.Post, new { id = "contact-form", action = "/contact" }))
                       {
                           if (ViewBag.Success != null && ViewBag.Success)
                           {
                            <div id="wrapper">
                                <div id="message-sent">
                                    <div id="close-button">
                                        <span>X</span>
                                    </div>
                                    <span>Mesajınız başarıyla gönderilmiştir.</span>
                                </div>
                            </div>
                           }
                        <div class="row">
                            <div class="form-group col-md-12">
                                @Html.TextBoxFor(model => model.fullname, new { @class = "form-control", placeholder = "Adınız Soyadınız" })
                            </div>
                            @Html.ValidationMessageFor(model => model.fullname, "", new { @class = "text-danger" })
                            <div class="form-group col-md-12">
                                @Html.TextBoxFor(model => model.email, new { @class = "form-control", placeholder = "Email Adresiniz" })
                            </div>
                            @Html.ValidationMessageFor(model => model.email, "", new { @class = "text-danger" })
                             
                                <div class="form-group col-md-12">
                                    @Html.TextAreaFor(model => model.text, new { @class = "form-control", placeholder = "Mesajınız" })
                                </div>
                            @Html.ValidationMessageFor(model => model.text, "", new { @class = "text-danger" })
                            @if (TempData["Basarili"] != null)
                            {
                <!-- Success message -->
                                <div class="alert alert-success" role="alert" id="success_message">
                                    Gönderildi <i class="glyphicon glyphicon-thumbs-up"></i>@TempData["Basarili"]
                                </div>
                            }
                            
                            <div class="col-md-12">
                                    <div class="actions">
                                        <button type="submit" value="Send message" name="submit" class="btn btn-default btn-pricing-bg">Send Message</button>
                                    </div>
                                </div>
                            </div>
                       }
                    </div>
                </div><!-- END COL -->
                <div class="col-md-6 col-sm-12 col-xs-12 wow bounceInRight" data-wow-delay=".3s">
                    <div class="contact_address">
                        <div class="single-address">
                            <i class="fa fa-rocket"></i>
                            <h4>Our Location</h4>
                            <p>3481 Melrose Place, Beverly Hills CA 90210</p>
                        </div>
                        <div class="single-address">
                            <i class="fa fa-phone"></i>
                            <h4>Call us on</h4>
                            <p>(+1) 517 397 7100 <br> (+1) 617 497 8200</p>
                        </div>
                        <div class="single-address">
                            <i class="fa fa-envelope"></i>
                            <h4>Send your message</h4>
                            <p>Info@Raleway.com.<br>admin@Raleway.com</p>
                        </div>
                        <div class="single-address">
                            <i class="fa fa-clock-o"></i>
                            <h4>Our Working Hours</h4>
                            <p>Mon-Fri 9.00AM to 5.00PM.</p>
                        </div>
                    </div>
                </div><!--- END COL -->
            </div><!--- END ROW -->
        </div><!--- END CONTAINER -->
    </section>
    <!-- END CONTACT FORM -->

